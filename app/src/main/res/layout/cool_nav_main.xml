<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <include
        layout="@layout/cool_nav_mainn_lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:fitsSystemWindows="false">

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="100dp"
        android:layout_alignParentRight="true"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/im_nav_cool"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_airballoon"
                android:layout_centerHorizontal="true"/>

            <ImageView
                android:id="@+id/im_blackberry"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_blackberry"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/im_nav_cool"/>

            <ImageView
                android:id="@+id/im_apple"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_apple"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/im_blackberry"/>

            <ImageView
                android:id="@+id/im_android"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_android"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/im_apple"/>

            <ImageView
                android:id="@+id/im_account"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_account_circle"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/im_android"/>

            <ImageView
                android:id="@+id/im_github_box"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_github_box"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/im_account"/>

            <ImageView
                android:id="@+id/im_google_drive"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_google_drive"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/im_github_box"/>

            <ImageView
                android:id="@+id/im_google_plus"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_google_plus"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/im_google_drive"/>


        </RelativeLayout>

    </android.support.design.widget.NavigationView>

        <RelativeLayout
            android:layout_toLeftOf="@id/nav_view"
            android:layout_width="100dp"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/balloon_cool_frame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/cool_nav_text">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Balloon"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center"
                    android:textSize="15dp"
                    android:textStyle="bold|italic"
                    android:textColor="#fff" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/blackberry_cool_frame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/balloon_cool_frame"
                android:layout_marginTop="38dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/cool_nav_text">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Blackberry"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center"
                    android:textSize="15dp"
                    android:textStyle="bold|italic"
                    android:textColor="#fff" />


            </FrameLayout>


            <FrameLayout
                android:id="@+id/apple_cool_frame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/blackberry_cool_frame"
                android:layout_marginTop="38dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/cool_nav_text">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Apple"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center"
                    android:textSize="15dp"
                    android:textStyle="bold|italic"
                    android:textColor="#fff" />


            </FrameLayout>



            <FrameLayout
                android:id="@+id/android_cool_frame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/apple_cool_frame"
                android:layout_marginTop="38dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/cool_nav_text">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Android"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center"
                    android:textSize="15dp"
                    android:textStyle="bold|italic"
                    android:textColor="#fff" />


            </FrameLayout>



            <FrameLayout
                android:id="@+id/account_cool_frame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/android_cool_frame"
                android:layout_marginTop="38dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/cool_nav_text">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Account"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center"
                    android:textSize="15dp"
                    android:textStyle="bold|italic"
                    android:textColor="#fff" />


            </FrameLayout>


            <FrameLayout
                android:id="@+id/github_cool_frame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/account_cool_frame"
                android:layout_marginTop="38dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/cool_nav_text">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Github"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center"
                    android:textSize="15dp"
                    android:textStyle="bold|italic"
                    android:textColor="#fff" />


            </FrameLayout>


            <FrameLayout
                android:id="@+id/drive_cool_frame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/github_cool_frame"
                android:layout_marginTop="38dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/cool_nav_text">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Google Drive"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center"
                    android:textSize="15dp"
                    android:textStyle="bold|italic"
                    android:textColor="#fff" />


            </FrameLayout>


            <FrameLayout
                android:id="@+id/plus_cool_frame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/drive_cool_frame"
                android:layout_marginTop="38dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/cool_nav_text">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Google plus"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center"
                    android:textSize="15dp"
                    android:textStyle="bold|italic"
                    android:textColor="#fff" />


            </FrameLayout>







        </RelativeLayout>



    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>
