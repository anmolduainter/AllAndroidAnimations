<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.joginderpal.allandroidanimations">

    <uses-permission android:name="android.permission.INTERNET"/>


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".float_anim.float_activity"/>
        <activity android:name=".inshorts.inshorts_main"
            android:screenOrientation="portrait"/>
        <activity android:name=".wynk.wynk_main"
            android:screenOrientation="portrait"/>
        <activity android:name=".navigation_drawer.navigationMain"
            android:screenOrientation="portrait"/>
    </application>

</manifest>